<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsAndConditionActivity"
    android:background="@color/colorMainDark"
    android:orientation="vertical">

    <include layout="@layout/custom_terms_and_condition_actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="30dp"
                android:text="@string/terms_and_privacy"
                android:textColor="@color/white"
                android:lineSpacingExtra="5sp"
                android:textSize="18sp"
                android:fontFamily="@font/verdanab"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>