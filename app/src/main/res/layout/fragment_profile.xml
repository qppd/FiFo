<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainDark"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/verdanab"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:src="@drawable/applogo"
                app:civ_border_color="@color/colorMain"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/txtProfileId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/verdanai"
                android:gravity="center"
                android:text="ID"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/verdanai"
                android:gravity="center"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/verdanai"
                android:gravity="left"
                android:text="Firstname"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_edit_text"
                android:drawableTint="@color/white"
                android:hint="Ex: Juan"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/verdanai"
                android:gravity="left"
                android:text="Lastname"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edit_text"
                android:drawableTint="@color/white"
                android:hint="Ex: Dela Cruz"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/verdanai"
                android:gravity="left"
                android:text="Age"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edit_text"
                android:drawableTint="@color/white"
                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/verdanai"
                android:gravity="left"
                android:text="Birthdate"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtBirthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edit_text"
                android:drawableTint="@color/white"
                android:hint="Ex: 05/07/1995"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/verdanai"
                android:gravity="left"
                android:text="Cellphone No."
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edit_text"
                android:drawableTint="@color/white"
                android:hint="Ex: 09634905586"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/verdanai"
                android:gravity="left"
                android:text="Monthly Salary/Income/Allowance"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edit_text"
                android:drawableTint="@color/white"
                android:hint="Ex: 20,000"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/verdanai"
                android:gravity="left"
                android:text="User Type"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Student"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/radEmployed"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Employed"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/radUnemployed"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Unemployed"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/radParent"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Parent"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="80dp"
                android:background="@color/colorAccent"
                android:text="Save"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="80dp"
                android:background="@color/colorAccent"
                android:text="Update"
                android:textColor="@color/white" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>