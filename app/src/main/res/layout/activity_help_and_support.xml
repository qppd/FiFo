<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainDark"
    tools:context=".HelpAndSupportActivity">

    <include layout="@layout/custom_help_action_bar"
        />

    <ScrollView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:text="User Guide"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="21sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:text="\u0009\u0009\u0009\Welcome to the user guide. Here you will find detailed instruction on how to use our application."
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:text="How it works?"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="21sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:text="Step 1"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="19sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="\u0009\u0009\u0009\Create account and sign in."
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="19sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/login_imageView_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="FIFO logo"
                android:elevation="10dp"
                android:src="@drawable/fifohelpsign" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:text="Step 2"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="19sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="\u0009\u0009\u0009\Fill up profile."
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="19sp"
                android:textStyle="bold"
                />

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="FIFO logo"
                android:elevation="10dp"
                android:src="@drawable/fifohelpprofile" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:text="Step 3"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="19sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="\u0009\u0009\u0009\Create your categories."
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="19sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="\u0009\u0009\u0009\Input expenses and savings."
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="19sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="FIFO logo"
                android:elevation="10dp"
                android:src="@drawable/fifohelpcategories" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:text="Step 4"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="19sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="\u0009\u0009\u0009\See your total expenses."
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="19sp"
                android:textStyle="bold"
                />



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="FIFO logo"
                android:elevation="10dp"
                android:src="@drawable/fifohelpexpenses" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="50dp"
                android:paddingRight="30dp"
                android:text="Contact Support"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="21sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="30dp"
                android:layout_marginBottom="50dp"
                android:text="\u0009\u0009\u0009\If your need further assistance, please reach out to our support team:"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="50dp"

                android:paddingRight="30dp"
                android:text="Email:"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="50dp"
                android:paddingRight="30dp"
                android:layout_marginBottom="10dp"
                android:text="Fifofinanceapplication@gmail.com"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="50dp"
                android:paddingTop="20dp"
                android:paddingRight="30dp"
                android:text="Phone:"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:paddingLeft="50dp"
                android:paddingRight="30dp"
                android:layout_marginBottom="50dp"
                android:text="09605208044"
                android:textColor="@color/white"
                android:fontFamily="@font/verdanab"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>